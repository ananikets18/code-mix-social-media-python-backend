# Environment Configuration
# Copy this file to .env and update with your values

# API Configuration
API_ENV=production
DEBUG=false
HOST=0.0.0.0
PORT=8000
WORKERS=4

# CORS Settings (comma-separated origins)
# For local development: http://localhost:3000,http://localhost:8080
# For production: https://yourdomain.com,https://app.yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000

# Security
# Generate a secure API key: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=your-secret-api-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-change-this

# Rate Limiting
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=500

# Model Configuration
MODEL_BASE_PATH=./
GLOTLID_MODEL_PATH=./cis-lmuglotlid

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=detailed

# Resources
INDIC_RESOURCES_PATH=./indic_nlp_resources

# Cache Configuration
CACHE_ENABLED=true
CACHE_FILE_PATH=./data/analyze_cache.json

# Redis (if using Redis for caching)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Monitoring (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
