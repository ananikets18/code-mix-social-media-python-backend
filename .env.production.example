# ========================================
# PRODUCTION ENVIRONMENT TEMPLATE
# Copy this to .env.production and fill with real values
# DO NOT commit .env.production to GitHub
# ========================================

API_ENV=production
DEBUG=false
PORT=8000
WORKERS=2

# ========================================
# Security - Replace with YOUR production keys
# Generate with: openssl rand -base64 48
# ========================================
API_KEY=REPLACE_WITH_YOUR_PRODUCTION_API_KEY_MIN_32_CHARS
JWT_SECRET_KEY=REPLACE_WITH_YOUR_PRODUCTION_JWT_SECRET_MIN_32_CHARS
ALLOWED_ORIGINS=https://code-mix-for-social-media.netlify.app,https://nlp-api.codemix.com

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=500

# ========================================
# Logging
# ========================================
LOG_LEVEL=INFO

# ========================================
# Upstash Redis - Production Instance
# ========================================
REDIS_ENABLED=true
UPSTASH_REDIS_REST_URL=https://your-production-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-production-upstash-token-here
REDIS_TTL=3600
REDIS_MAX_RETRIES=3
REDIS_TIMEOUT=10

# ========================================
# Azure Monitor - Application Insights
# ========================================
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=xxx;IngestionEndpoint=https://...
